<div class="news">
    <h2>{{ news.title }}</h2>
    <p class="meta">{{ "by" | trans }}
        <a href="{{ url('player_show', {'player_id': news.author.id}) }}">{{ news.author.username }}</a>
        - {{ news.date.format('d/m/Y - H:i') }}
        - <strong>{{ news.comments | length }}</strong> {{ "comments" | trans }}
    </p>
    {{ news.body | innerBlocks }}
</div>