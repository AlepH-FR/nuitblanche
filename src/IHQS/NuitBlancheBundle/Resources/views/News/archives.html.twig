{% extends 'IHQSNuitBlancheBundle::layout_standard.html.twig' %}

{% block title %}{{ "News archives" | trans }}{% endblock %}

{% block content %}
<div class="sub-section wide">
    <ul>
        {% for new in news %}
        <li>
            <a href="{{ url('news_show', { 'news_id' : new.id }) }}">
                <img class="flag" src="{{ new.team.icon }}" />
                {{ new.title }}
            </a>
            <span class="little">
                <strong>{{ new.author.username }}</strong>
                - {{ new.date.format('d m Y') }}
            </span>
            <span class="little">(<strong>{{ new.comments | length }}</strong> {{ "comments" | trans }})</span>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}