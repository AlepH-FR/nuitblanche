<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="keywords" content="nuit blanche, starcraft 2, multigaming, female gaming" />
        <title>Nuit Blanche, Fair Gamers since 1996 | {% block title %}{% endblock %}</title>

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/ihqsnuitblanche/css/styles.css') }}" type="text/css" media="all" />

        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
        <script type="text/javascript" src="{{ asset('bundles/ihqswysiwyg/js/wysiwyg.js') }}"></script>
    </head>
    <body>
        {% include "IHQSNuitBlancheBundle:Layout:_message.html.twig" %}
  	<div id="page">
            <a name="top"></a>
            <div id="header">
                <h1><span>Nuit Blanche - {{ block('title') }}</span></h1>
                <ul class="lang">
                    <li><a href="" class="fr"><span>fr</span></a></li>
                    <li><a href="" class="en"><span>en</span></a></li>
                </ul>

                {% if is_granted('ROLE_USER') %}
                    {% render "IHQSNuitBlancheBundle:Secured:_hello" %}
                {% else %}
                    {% render "IHQSNuitBlancheBundle:Secured:_login" %}
                {% endif %}

                <ul class="menu">
                    <li class="first">
                        <a href="{{ url('homepage') }}">{{ "Home" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ url('homepage') }}">{{ "News" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ url('team_list') }}">{{ "Team" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ url('war_list') }}">{{ "Matchs" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ url('league_list') }}">{{ "Leagues" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ url('replay_list') }}">{{ "Replays" | trans }}</a>
                    </li>
                    <li class="stream-{% render "IHQSNuitBlancheBundle:Stream:_status" %}">
                        <a href="http://www.livestream.com/nuitblanchegaming" target="_blank" class="disabled">Stream</a>
                    </li>
                    <li class="last">
                        <a href="" class="disabled">Forum</a>
                    </li>
                </ul>

                <div style="clear: both"></div>
            </div>

            <div id="left">
                {% block left %}
                {% endblock %}
            </div>

            <div id="content">
                {% if app.session.flash('notice') %}
                    <div class="flash-message">
                        <em>Notice</em>: {{ app.session.flash('notice') }}
                    </div>
                {% endif %}

                {% block content %}
                {% endblock %}
            </div>

            <div id="right">
                {% block right %}
                {% endblock %}
            </div>
        </div>

        <script type="text/javascript">
            ihqs.wysiwyg.setSettings({
                name: "html",
                onShiftEnter:  	{ keepDefault: false, replaceWith: '<br />\n' },
                onCtrlEnter:  	{ keepDefault: false, openWith: '\n<p>', closeWith : '</p>' },
                onTab:    	{ keepDefault: false, replaceWith: '    '},
                markupSet:  [
                    {name:'Title',      openWith:'<h3(!( class="[![Class]!]")!)>',  closeWith:'</h3>'  },
                    {name:'Paragraph',  openWith:'<p(!( class="[![Class]!]")!)>',   closeWith:'</p>'  },
                    {separator : '---------------' },
                    {name : 'Bold',             key : 'B',  openWith : '(!(<strong>|!|<b>)!)',  closeWith : '(!(</strong>|!|</b>)!)' },
                    {name : 'Italic',           key : 'I',  openWith : '(!(<em>|!|<i>)!)',      closeWith : '(!(</em>|!|</i>)!)'  },
                    {name : 'Stroke through',   key : 'S',  openWith : '<del>',                 closeWith : '</del>' },
                    {separator : '---------------' },
                    {name : 'Picture',          key : 'P',  replaceWith :   '<img src="[![Source : ! : http : //]!]" alt="[![Alternative text]!]" />' },
                    {name : 'Link',             key : 'L',  openWith :      '<a href="[![Link : ! : http : //]!]"(!( title="[![Title]!]")!)>', closeWith : '</a>', placeHolder : 'Your text to link...' },
                    {separator : '---------------' },
                    {name : 'War',              key : 'W',  openWith :      '\n<div class="news-war">{war:[![War Id]!]}</div>\n', closeWith : '' },
                    {separator : '---------------' },
                    {name : 'Clean',    className : 'clean',    replaceWith : function(markitup) { return markitup.selection.replace(/<(.*?)>/g, "") } },
                    {name : 'Preview',  className : 'preview',  call : 'preview'}
                ]
            });
        </script>
        {% render "IHQSWysiwygBundle:Script:init" %}
    </body>
</html>
