{% extends 'IHQSNuitBlancheBundle::layout_home.html.twig' %}

{% block title %}
{% endblock %}

{% block content %}
    
    <div class="block block-3">
        {% include "IHQSNuitBlancheBundle:News:_teasers.html.twig" with { 'news': news, 'title': 'News Nuit Blanche' } %}
    </div>
    <div class="block block-3 block-last">
        {% include "IHQSNuitBlancheBundle:News:_teasers.html.twig" with { 'news': newsCommunity, 'title': 'Community News' } %}
    </div>
    <div class="spacer"></div>

    <div class="block block-4">
        {% render "IHQSNuitBlancheBundle:War:_next" %}
    </div>
    <div class="block block-1 block-last">
        <div class="promote promote-forum">
            <a href="{{ url('forum_index') }}">{{ "Forum" | trans }}</a>
        </div>
        <div class="promote promote-tournaments">
            <a href="#">{{ "Tournaments" | trans }}</a>
        </div>
    </div>
    <div class="spacer"></div>

    <div class="block block-2">
        {% render "IHQSNuitBlancheBundle:War:_latest" %}
    </div>
    <div class="block block-2-mid">
        {% render "IHQSForumBundle:Topic:_latest" %}
    </div>
    <div class="block block-2">
        {% render "IHQSForumBundle:Topic:_latest" %}
    </div>
    <div class="block block-2-mid block-last">
        {% render "IHQSNuitBlancheBundle:Replay:_latest" %}
    </div>
    <div class="spacer"></div>

{% endblock %}

{% block right %}
    {% render "IHQSNuitBlancheBundle:Team:_sections" %}
    {% render "IHQSNuitBlancheBundle:Player:_connected" %}
    {% render "IHQSNuitBlancheBundle:Ts3:_channels" %}
    {% include "IHQSNuitBlancheBundle:Main:_partners.html.twig" %}
{% endblock %}
