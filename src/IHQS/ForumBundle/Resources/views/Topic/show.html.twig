{% extends 'ForumBundle::layout.html.twig' %}

{% block title %}{{ topic.subject}}{% endblock %}

{% block content %}
<div class="forum forum_topic">

    <ul class="crumbs filters">
        <li><a href="{{ path('forum_index') }}">{{ "Forum" | trans }}</a></li>
        <li><a href="{{ forum_urlForCategory(topic.category) }}">{{ topic.category.name }}</a></li>
        <li class="last">{{ topic.subject }}</li>
    </ul>

    <div class="main topic">
        {% include 'ForumBundle:Post:list.html.twig' with {'posts': posts} %}
        {% include 'ForumBundle::pagination.html.twig' with {'pager': posts.pages, 'url': forum_urlForTopic(topic)} %}
    </div>

    <div class="register">
        <a href="{{ forum_urlForTopicReply(topic) }}">{{ "Add a new reply" | trans }}</a>
    </div>

</div>
{% endblock %}
